<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Movies List</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f4f6f9;
      margin: 0;
      padding: 0;
    }

    /* Navbar */
    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: #007bff;
      padding: 15px 30px;
      color: white;
    }
    .navbar h1 {
      margin: 0;
      font-size: 20px;
    }
    .navbar ul {
      list-style: none;
      display: flex;
      margin: 0;
      padding: 0;
    }
    .navbar ul li {
      margin-left: 20px;
    }
    .navbar ul li a {
      text-decoration: none;
      color: white;
      font-size: 16px;
      transition: color 0.3s;
    }
    .navbar ul li a:hover {
      color: #ffe066;
    }
    .navbar .btn {
      background: #ffcc00;
      border: none;
      padding: 8px 14px;
      border-radius: 6px;
      cursor: pointer;
      font-weight: bold;
      color: #333;
      text-decoration: none;
      transition: background 0.3s;
    }
    .navbar .btn:hover {
      background: #e6b800;
    }

    /* Movies container as grid */
    .movies-container {
      max-width: 1200px;
      margin: 40px auto;
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 20px;
      padding: 10px;
    }

    /* Movie card */
    .movie-card {
      background: #fff;
      border-radius: 12px;
      padding: 15px;
      box-shadow: 0px 4px 10px rgba(0,0,0,0.1);
      text-align: center;
      transition: transform 0.3s;
    }
    .movie-card:hover {
      transform: translateY(-5px);
    }

    .movie-card img {
      width: 100%;
      height: 200px;
      object-fit: cover;
      border-radius: 8px;
      margin-bottom: 10px;
    }

    .movie-card h2 {
      margin: 8px 0;
      color: #007bff;
      font-size: 18px;
    }
    .movie-card p {
      margin: 4px 0;
      font-size: 14px;
      color: #333;
    }

    /* Action buttons */
    .actions {
      margin-top: 10px;
    }
    .action-btn {
      display: inline-block;
      padding: 6px 12px;
      margin: 4px;
      border-radius: 5px;
      text-decoration: none;
      color: #fff;
      font-size: 14px;
      transition: background 0.3s;
    }
    .edit-btn {
      background: #28a745;
    }
    .edit-btn:hover {
      background: #1e7e34;
    }
    .delete-btn {
      background: #dc3545;
    }
    .delete-btn:hover {
      background: #a71d2a;
    }

    /* Responsive grid */
    @media (max-width: 1024px) {
      .movies-container {
        grid-template-columns: repeat(3, 1fr);
      }
    }
    @media (max-width: 768px) {
      .movies-container {
        grid-template-columns: repeat(2, 1fr);
      }
    }
    @media (max-width: 480px) {
      .movies-container {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar">
    <h1>üé¨ Movie Project</h1>
    <ul>
      <li><a class="btn" href="/addMovie-button">‚ûï Add Movie</a></li>
    </ul>
  </nav>

  <!-- Movies List -->
  <div class="movies-container">
    <% data.map((e,i)=>{ %>
      <div class="movie-card">
        <img src="<%= e.image %>" alt="<%= e.title %>">
        <h2><%= e.title %></h2>
        <p><strong>Genre:</strong> <%= e.genre %></p>
        <p><strong>Review:</strong> <%= e.review %></p>
        <p><strong>Rating:</strong> ‚≠ê <%= e.rating %>/10</p>
        <div class="actions">
          <a href="/editData?id=<%= e.id %>" class="action-btn edit-btn">‚úèÔ∏è Edit</a>
          <a href="/deleteData?id=<%= e.id %>" class="action-btn delete-btn">üóëÔ∏è Delete</a>
        </div>
      </div>
    <% }) %>
  </div>

</body>
</html>
